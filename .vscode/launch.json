    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug backend",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/backend",
            "jinja": true,
        },
        {
            "name": "Debug builder",
            "type": "debugpy",
            "request": "launch",
            "module": "fastapi",
            "args": [
                "run",
                "app/docker_builder.py",
                "--port",
                "8001"
            ],
            "cwd": "${workspaceFolder}/backend",
            "jinja": true,
        },
        {
            "name": "Debug mesenger",
            "type": "debugpy",
            "request": "launch",
            "module": "app.messenger",
            "cwd": "${workspaceFolder}/backend",
            "jinja": true,
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug Frontend: Launch Chrome against http://localhost:5173",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/frontend"
        },
    ]
}
